{
  "private": true,
  "packageManager": "pnpm@7.6.0",
  "scripts": {
    "build": "vite build",
    "dev": "vite --port 3333 --open",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "cypress open",
    "test:unit": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier -c --write src/**/*.{ts,tsx}"
  },
  "dependencies": {
    "@vueuse/components": "^8.9.4",
    "@vueuse/core": "^8.9.4",
    "@vueuse/head": "^0.7.6",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.16",
    "vue": "^3.2.37",
    "vue-demi": "^0.13.5",
    "vue-i18n": "^9.1.10",
    "vue-router": "^4.1.2"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.1.6",
    "@intlify/vite-plugin-vue-i18n": "^3.3.1",
    "@junaya/eslint-config": "^0.1.22",
    "@types/canvas-confetti": "^1.4.3",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/node": "^18.0.6",
    "@unocss/reset": "^0.41.2",
    "@vitejs/plugin-legacy": "^1.8.2",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/test-utils": "^2.0.2",
    "axios": "^0.27.2",
    "canvas-confetti": "^1.5.1",
    "cypress": "^10.3.1",
    "eslint": "^8.23.0",
    "eslint-plugin-cypress": "^2.12.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "markdown-it-link-attributes": "^4.0.0",
    "markdown-it-shiki": "^0.5.1",
    "picocolors": "^1.0.0",
    "pnpm": "^7.5.2",
    "prettier": "^2.7.1",
    "shiki": "^0.10.1",
    "simple-git-hooks": "^2.8.1",
    "tsc-files": "^1.1.3",
    "tsx": "^3.12.1",
    "typescript": "^4.7.4",
    "unocss": "^0.41.2",
    "unplugin-auto-import": "^0.9.3",
    "unplugin-vue-components": "^0.20.1",
    "url-parse": "^1.5.10",
    "vite": "^2.9.14",
    "vite-plugin-inspect": "^0.6.0",
    "vite-plugin-pages": "^0.24.3",
    "vite-plugin-pwa": "^0.12.3",
    "vite-plugin-vue-layouts": "^0.7.0",
    "vite-plugin-vue-markdown": "^0.20.1",
    "vite-ssg": "^0.20.2",
    "vite-ssg-sitemap": "^0.3.1",
    "vitest": "^0.16.0",
    "vue-tsc": "^0.38.8"
  },
  "eslintConfig": {
    "extends": "@junaya"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*.{.vue}": [
      "vue-tsc --noEmit"
    ],
    "*.{ts,tsx}": [
      "tsc-files --noEmit"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
