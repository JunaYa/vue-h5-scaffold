{
  "private": true,
  "packageManager": "pnpm@7.6.0",
  "scripts": {
    "dev": "vite --port 3333 --open",
    "start:dev": "vite --port 3333 --open --mode development",
    "start:stg": "vite --port 3333 --open --mode staging",
    "start:prd": "vite --port 3333 --open --mode production",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:stg": "vite build --mode staging",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "pnpm dlx playwright test",
    "test:unit": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier -c --write src/**/*.{ts,tsx}"
  },
  "dependencies": {
    "@vueuse/components": "^8.9.4",
    "@vueuse/core": "^8.9.4",
    "@vueuse/head": "^0.7.13",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.24",
    "vue": "^3.2.45",
    "vue-demi": "^0.13.11",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.1.10",
    "@intlify/vite-plugin-vue-i18n": "^6.0.3",
    "@junaya/eslint-config": "^0.1.40",
    "@playwright/test": "^1.28.1",
    "@types/canvas-confetti": "^1.6.0",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/node": "^18.11.9",
    "@types/nprogress": "^0.2.0",
    "@unocss/reset": "^0.41.2",
    "@vitejs/plugin-legacy": "^2.3.1",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/test-utils": "^2.2.3",
    "axios": "^0.27.2",
    "canvas-confetti": "^1.6.0",
    "eslint": "^8.27.0",
    "jsdom": "^20.0.2",
    "lint-staged": "^13.0.3",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-shiki": "^0.5.1",
    "picocolors": "^1.0.0",
    "pnpm": "^7.16.1",
    "prettier": "^2.7.1",
    "shiki": "^0.10.1",
    "simple-git-hooks": "^2.8.1",
    "terser": "^5.16.0",
    "tsc-files": "^1.1.3",
    "tsx": "^3.12.1",
    "typescript": "^4.9.3",
    "unocss": "^0.46.5",
    "unplugin-auto-import": "^0.9.5",
    "unplugin-vue-components": "^0.20.1",
    "url-parse": "^1.5.10",
    "vite": "^3.2.4",
    "vite-plugin-inspect": "^0.6.1",
    "vite-plugin-pages": "^0.27.1",
    "vite-plugin-pwa": "^0.13.3",
    "vite-plugin-vue-layouts": "^0.7.0",
    "vite-plugin-vue-markdown": "^0.20.1",
    "vite-ssg": "^0.20.2",
    "vite-ssg-sitemap": "^0.3.2",
    "vitest": "^0.16.0",
    "vue-tsc": "^0.38.9"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*..vue": [
      "vue-tsc --noEmit"
    ],
    "*.{ts,tsx}": [
      "tsc-files --noEmit"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": "@junaya"
  }
}
